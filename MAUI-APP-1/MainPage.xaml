<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mycode="clr-namespace:MAUI_APP_1"
             x:Class="MAUI_APP_1.MainPage">
    
    <VerticalStackLayout Padding="30" MaximumWidthRequest="400" >
        <Label Text="Enter your username and password." Margin="0,30,0,0"/>
        
        <Label Text="Username"  Margin="0,30,0,0"/>
        <Entry Text="" x:Name="EntryUsername"/>

        <Label Text="Password" Margin="0,30,0,0"/>
        <Entry Text="" x:Name="entyPassword" IsPassword="True"/>

        <Button Text="Login" x:Name="ButtonLogin" TextColor="White" BackgroundColor="#22A7F0"  Margin="0,30,0,0"/>

    </VerticalStackLayout>

</ContentPage>
